{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strict": true,
    "paths": {
      "*": [
        "*",
        "types/*"
      ],
    },
    "target": "es2017",
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "ESNext",
    "outDir": "_build",
    "lib": [
      "ES2020",
      "DOM"
    ],
    
    // We use esbuild to build
    "noEmit": true,
    "skipLibCheck": true,
  },
  "include": [
    "lib/ambient.d.ts",
    "gi-types/gi.d.ts",
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules/@types/**",
  ],
}