{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strict": true,
    "paths": {
      "*": [
        "*",
        "gi-types/*"
      ],
    },
    "target": "es2017",
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "ESNext",
    "outDir": "dist",
    "lib": [
      "ES2020"
    ],
    // We use esbuild to build
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
  },
  "include": [
    "lib/ambient.d.ts",
    "dist/types.d.ts",
    "gi-types/*",
    "src/**/*.ts",
    "test/*.ts",
  ],
  "exclude": [
    "node_modules/@types/**"
  ],
}